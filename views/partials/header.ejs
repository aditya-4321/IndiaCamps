<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">     
        
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#twist" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="header">
          <a class="navbar-brand" href="/">IndiaCamp</a>
      </div>
      
      
    
    
    <div class="collapse navbar-collapse" id="twist">
      <ul class="nav navbar-nav navbar-right">
          <% if(!currentUser){ %>
                <li ><a href="/login">Login</a></li>
                <li ><a href="/register">SignUp</a></li>
       
          <% } else { %>
                 <li><a href="#">Currently logged in as <%= currentUser.username%></a></li>
                 <li><a href="/logout">LogOut</a></li>
          <% } %>
        </ul>
        </div>
        
        </div>
        </nav>
        <div class="container">
        <% if(error && error.length>0) {%>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
        <% if(success && success.length>0) {%>
        <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>
        </div>
        
    